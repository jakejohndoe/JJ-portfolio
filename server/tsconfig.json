{
    "compilerOptions": {
      "target": "ES2022",
      "module": "ESNext", // Changed from commonjs to ESNext
      "outDir": "./dist",
      "rootDir": ".",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "types": ["node"],
      "moduleResolution": "NodeNext", // Changed from node to NodeNext
      "baseUrl": ".",
      "paths": {
        "@shared/*": ["../shared/*"]
      }
    },
    "include": ["**/*.ts"],
    "exclude": [
      "node_modules",
      "../client/**/*"
    ]
  }