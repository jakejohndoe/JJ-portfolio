{
    "compilerOptions": {
      "target": "ES2022",
      "module": "NodeNext",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "NodeNext",
      "baseUrl": "./src",
      "paths": {
        "@shared/*": ["../../shared/*"]
      },
      "types": ["node"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }