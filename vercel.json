{
    "version": 2,
    "builds": [
      {
        "src": "client/**",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "installCommand": "cd client && npm install && cd .. && npm install",
          "buildCommand": "npm run build:frontend",
          "outputDirectory": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)", 
        "dest": "client/dist/$1",
        "headers": {
          "Cache-Control": "public, max-age=0, must-revalidate"
        }
      }
    ]
  }