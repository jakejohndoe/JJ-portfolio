{
  "rewrites": [
    { "source": "/api/skills", "destination": "https://hellojakejohn.onrender.com/api/skills" },
    { "source": "/api/projects", "destination": "https://hellojakejohn.onrender.com/api/projects" },
    { "source": "/api/stats", "destination": "https://hellojakejohn.onrender.com/api/stats" },
    { "source": "/api/services", "destination": "https://hellojakejohn.onrender.com/api/services" },
    { "source": "/api/test", "destination": "https://hellojakejohn.onrender.com/api/test" },
    { "source": "/api/health", "destination": "https://hellojakejohn.onrender.com/api/health" },
    { "source": "/api/portfolio/:path*", "destination": "https://hellojakejohn.onrender.com/api/portfolio/:path*" },
    { "source": "/((?!api).*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ]
}