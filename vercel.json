{
    "version": 2,
    "builds": [
      {
        "src": "client/**",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist",
          "installCommand": "npm install",
          "buildCommand": "npm run build:frontend",
          "outputDirectory": "client/dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/(.*)",
        "dest": "client/dist/$1"
      }
    ]
  }