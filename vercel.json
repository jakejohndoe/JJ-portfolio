{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "includeFiles": ["client/dist/**"],
        "nodeVersion": "20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/assets/$1",
      "headers": {
        "Cache-Control": "public, max-age=31536000, immutable"
      }
    },
    {
      "src": "/api/(.*)",
      "dest": "https://hellojakejohn.onrender.com/api/$1",
      "headers": {
        "Access-Control-Allow-Origin": "https://www.hellojakejohn.com",
        "Access-Control-Allow-Credentials": "true",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    {
      "src": "/resume",
      "dest": "client/dist/assets/resume.html",
      "headers": {
        "Cache-Control": "no-cache"
      }
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/index.html",
      "headers": {
        "Cache-Control": "no-cache, no-store, must-revalidate"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://hellojakejohn.onrender.com/api/$1"
    }
  ]
}