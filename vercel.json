{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/dist",
        "includeFiles": ["client/dist/**"],
        "nodeVersion": "20.x"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "client/dist/assets/$1"
    },
    {
      "src": "/(.*)", 
      "dest": "client/dist/assets/resume.html"
    }
  ]
}